<div class="admin-order-index">
  <%= render partial: 'shared/admin_navigation',
             locals: { active: current_page?(store_admin_orders_path(current_store)) ? :dashboard : :search } %>

  <div class="span8">
    <h1><% if current_page?(store_admin_orders_path(current_store)) %><%= t 'admin.dashboard' %><% else %>Search<%end%></h1>
    <hr>

    <% if @count > 0 %>
      <%= render partial: 'admin_dashboard_nav', locals: {active_tab: @active_tab} %>
        <br>
        <table class="table">
          <thead>
          <th>#</th>
          <th><%= t 'model.createdat' %></th>
          <th><%= t 'model.status' %></th>
          <th><%= t 'model.modify' %></th>
          </thead>
          <tbody>
          <%= render @orders %>
          </tbody>
        </table>
    <% else %>
        <%= "No orders" %>
    <% end %>
  </div>
</div>
